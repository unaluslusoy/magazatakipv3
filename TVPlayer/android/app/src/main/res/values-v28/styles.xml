<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Android 9 (API 28) ve üzeri için tema ayarları -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Tam ekran modu -->
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>

        <!-- Status bar ve navigation bar gizle -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>

        <!-- Arka plan siyah - dijital tabela için ideal -->
        <item name="android:windowBackground">@android:color/black</item>

        <!-- React Native edit text uyumluluğu -->
        <item name="android:editTextBackground">@drawable/rn_edit_text_material</item>

        <!-- Android 9+ Notch/Cutout desteği - tüm kenarları kullan -->
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>

        <!-- Status bar ve navigation bar transparan -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>

        <!-- Gesture navigation için -->
        <item name="android:enforceStatusBarContrast">false</item>
        <item name="android:enforceNavigationBarContrast">false</item>
    </style>
</resources>

